<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_height="match_parent"
    tools:context=".RockPaperScissorActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rock Paper Scissors"
        android:textSize="@dimen/_30sdp"
        android:textAlignment="center"
        android:background="@drawable/background_input"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_20sdp"
        />
<LinearLayout
    android:id="@+id/youchooseTv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/title"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/primary"
        android:text="You choose: "
        android:layout_marginBottom="@dimen/_10sdp"
        />

    <TextView
        android:id="@+id/userOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/primary"
        android:text=""
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_10sdp"
        />
</LinearLayout>


    <LinearLayout
        android:id="@+id/userLayout"
        android:layout_below="@id/youchooseTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_below="@id/youchooseTv"
            android:id="@+id/rockBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rock"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            />

        <Button
            android:layout_below="@id/youchooseTv"
            android:id="@+id/paperBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paper"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:backgroundTint="@color/colorAccent"
            />

        <Button
            android:layout_below="@id/youchooseTv"
            android:id="@+id/scissorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scissors"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorAccent"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/computerChooseTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userLayout"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/computerChoose"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Chooses:"
            android:layout_below="@id/userLayout"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/primary"
            />
        <TextView
            android:id="@+id/computerOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/primary"
            android:text=""
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_10sdp"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/resultsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Results"
        android:textColor="@color/primary_dark"
        android:textSize="@dimen/_30sdp" />

    <TextView
        android:id="@+id/finalResultTv"
        android:layout_below="@id/resultsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:text="Results"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_30sdp" />





</RelativeLayout>